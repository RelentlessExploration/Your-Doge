{
  "name": "desktop",
  "version": "1.0.0",
  "private": true,
  "license": "GPL-3.0-or-later",
  "main": "electron.js",
  "author": {
    "email": "timpersonal07@gmail.com",
    "name": "Tim"
  },
  "description": "An awesome doge themed homework manager",
  "scripts": {
    "dev:electron": "concurrently -k \"BROWSER=none yarn dev\" \"yarn electron\"",
    "electron": "wait-on tcp:3000 && electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "yourdoge",
    "productName": "Your Doge",
    "copyright": "Tim",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "resources/icon.png",
      "identity": null,
      "hardenedRuntime": true,
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "resources/icon.png",
      "target": "nsis",
      "publish": [
        "github"
      ]
    },
    "linux": {
      "icon": "resources/icon.png",
      "target": [
        "deb",
        "AppImage",
        "snap",
        "tar.gz"
      ],
      "category": "Utility"
    },
    "snap": {
      "confinement": "strict",
      "plugs": [
        "default",
        {
          "browser-support": {
            "interface": "browser-support",
            "allow-sandbox": false
          }
        }
      ]
    },
    "extraMetadata": {
      "main": "electron.js"
    },
    "extends": null
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^16.3.1",
    "electron": "13.1.8",
    "electron-builder": "^22.11.7",
    "wait-on": "5.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/timthedev07/Your-Doge.git"
  }
}
